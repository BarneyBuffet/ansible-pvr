[Unit]
Description=Jackett Daemon
After=network.target

[Service]
SyslogIdentifier=jackett
Restart=always
RestartSec=5
Type=simple
User={{ PVR_UID }}
Group={{ PVR_GID }}
WorkingDirectory=/home/{{ PVR_USERNAME}}/.config/jackett/
ExecStart=/bin/sh "/opt/jackett/jackett_launcher.sh"
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target