[Unit]
Description=Lidarr Daemon
After=syslog.target network.target

[Service]
User={{ PVR_UID }}
Group={{ PVR_GID }}
Type=simple

ExecStart=/opt/lidarr/Lidarr -nobrowser -data=/home/{{ PVR_USERNAME }}/.config/radarr
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target